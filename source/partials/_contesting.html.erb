<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 contest">
      <!-- Facebook -->
      <div class="center-align margin-top">
        <hr>
        <h5>Enter to win this guitar</h5>
        <hr>
      </div>
      <img class="full-w" src="https://s3.amazonaws.com/myfangate.com/myenemiesandi/guitar.jpg">
      <p>Email Address</p>
      <input id="facebook-email" type="text" placeholder="ENTER YOUR EMAIL">
      <div class="col s12 center-align">
        <div class="light-blue darken-4 btn fb-share-btn">
          <div class="valign-wrapper">
            <i class="fa fa-facebook-square valign"></i><p class="valign">share on facebook</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 contest">
      <!-- Twitter -->
      <div class="center-align margin-top">
        <hr>
        <h5>Enter to win this drum</h5>
        <hr>
      </div>
      <img class="full-w" src="https://s3.amazonaws.com/myfangate.com/myenemiesandi/bassdrum.jpg">
      <p>Twitter Handle</p>
      <input id="twitter-handle" type="text" placeholder="ENTER YOUR TWITTER SCREENNAME">
      <p>Email Address</p>
      <input id="twitter-email" type="text" placeholder="ENTER YOUR EMAIL">
      <div class="col s12 center-align">
        <a class="light-blue lighten-2 btn twitter-share">
          <div class="valign-wrapper">
            <i class="fa fa-twitter valign"></i>
            <p class="valign">Share on Twitter</p>
          </div>
        </a>
        <p class="red-text text-darken-4">DO NOT EDIT TWEET FOR VALID ENTRY</p>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 contest">
      <!-- Spotify  -->
      <div class="center-align margin-top">
        <hr>
        <h5>Enter to win this bass</h5>
        <hr>
      </div>
      <img class="full-w" src="https://s3.amazonaws.com/myfangate.com/myenemiesandi/bass.jpg">
      <p>Email Address</p>
      <input id="spotify-email" placeholder="ENTER YOUR EMAIL">
      <div class="col s12 center-align">
        <div class="light-green darken-3 btn btn-primary" id="btn-follow">
          <div class="valign-wrapper">
            <i class="fa fa-spotify valign"></i><p class="valign">Follow On Spotify</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
